apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-mci
  namespace: {{ app_namespace }}
  labels:
    app: {{ app_name }}
    region: {{ bastion_region }}
  annotations:
    cloud.google.com/neg: '{"ingress": true}'
    cloud.google.com/backend-config: '{"default": "{{ project_name }}-backend-config"}'
spec:
  type: ClusterIP
  selector:
    app: {{ app_name }}
  ports:
    - name: http
      port: 80
      targetPort: 80
      protocol: TCP